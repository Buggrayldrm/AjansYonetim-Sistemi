def urun_sil():
    frame_sag=Frame(master,bg="#add8e6") #SAĞ ALAN
    frame_sag.place(relx=0.37,rely=0.23,relwidth=0.48,relheight=0.6)
    
    silinecek_urun= Label(frame_sag,bg="#add8e6",text="silmek istediğiniz ürünü seçiniz")
    silinecek_urun.pack(pady=2,padx=2)
    
    miktar_yazi= Label(frame_sag,bg="#add8e6",text="miktar giriniz")
    miktar_yazi.pack()
    miktar= Entry(frame_sag)
    miktar.pack()
    
    sut_butonu= Radiobutton(frame_sag,text="     süt     ")
    sut_butonu.pack(pady=3)
    
    peynir_butonu=Radiobutton(frame_sag,text="peynir")
    peynir_butonu.pack()
    
    dondurma_butonu=Radiobutton(frame_sag,text="dondurma")
    dondurma_butonu.pack(pady=3)
    
    yogurt_butonu= Radiobutton(frame_sag,text="yogurt")
    yogurt_butonu.pack()    



def hayvan_sayisi():
    
    frame_sag=Frame(master,bg="#add8e6") #SAĞ ALAN
    frame_sag.place(relx=0.37,rely=0.23,relwidth=0.48,relheight=0.6)
    inek_yazi=Label(frame_sag,bg="#add8e6",text="inek sayisi")
    inek_yazi.pack()
    inek_sayisi_yazdir=Label(frame_sag,bg="#add8e6",text=inek.adet)
    inek_sayisi_yazdir.pack()
    
    inek_yazi=Label(frame_sag,bg="#add8e6",text="koyun sayisi")
    inek_yazi.pack()
    inek_sayisi_yazdir=Label(frame_sag,bg="#add8e6",text=koyun.adet)
    inek_sayisi_yazdir.pack()
    
    inek_yazi=Label(frame_sag,bg="#add8e6",text="keçi sayisi")
    inek_yazi.pack()
    inek_sayisi_yazdir=Label(frame_sag,bg="#add8e6",text=keci.adet)
    inek_sayisi_yazdir.pack()
    
    inek_yazi=Label(frame_sag,bg="#add8e6",text="tavuk sayisi")
    inek_yazi.pack()
    inek_sayisi_yazdir=Label(frame_sag,bg="#add8e6",text=tavuk.adet)
    inek_sayisi_yazdir.pack()
    
