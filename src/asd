from tkinter import *




master = Tk()

#İŞLEMLERİN FONKSİYONLARI




def hayvan_ekle():
   
    frame_sag=Frame(master,bg="#add8e6") #SAĞ ALAN
    frame_sag.place(relx=0.37,rely=0.23,relwidth=0.48,relheight=0.6)
    

    
    ekleme_butonu_yazi= Label(frame_sag,bg="#add8e6",text="EKLEMEK İSTEDİĞİNİZ HAYVANI SEÇİNİZ ")
    ekleme_butonu_yazi.pack(padx=2,pady=2 )

    
    inek_ekleme_butonu= Button(frame_sag,text="inek",command= inek_eklemece)
    inek_ekleme_butonu.pack(pady=5)
    
    koyun_ekleme_butonu= Button(frame_sag,text="koyun",command=koyun_eklemece)
    koyun_ekleme_butonu.pack(pady=5)
    
    keçi_ekleme_butonu= Button(frame_sag,text="keçi",command=keci_eklemece)
    keçi_ekleme_butonu.pack(pady=5)
    
def inek_eklemece():
    inek.inekk_ekle()
    hayvan_ekle
        
def koyun_eklemece():
    koyun.koyun_ekle()
    hayvan_ekle
    
def keci_eklemece():
    keci.keci_ekle()
    hayvan_ekle

        

def hayvan_sil():
    frame_sag=Frame(master,bg="#add8e6") #SAĞ ALAN
    frame_sag.place(relx=0.37,rely=0.23,relwidth=0.48,relheight=0.6)
    hayvan_silme_yazi= Label(frame_sag,bg="#add8e6",text="SİLMEK SİTEDİĞİNİZ HAYVANI SEÇİNİZ")
    hayvan_silme_yazi.pack(pady=5)

    inek_silme_butonu= Button(frame_sag,text="inek",command=inek_silmece)
    inek_silme_butonu.pack(pady=5)
    
    koyun_silme_butonu= Button(frame_sag,text="koyun",command=koyun_silmece)
    koyun_silme_butonu.pack(pady=5)
    
    keçi_silme_butonu= Button(frame_sag,text="keçi",command=keci_silmece)
    keçi_silme_butonu.pack(pady=5)

def inek_silmece():
    inek.inek_sil()
    hayvan_sil

def koyun_silmece():
    koyun.koyun_sil()
    hayvan_sil

def keci_silmece():
    keci.keci_sil()
    hayvan_sil

def hayvan_secimi():
