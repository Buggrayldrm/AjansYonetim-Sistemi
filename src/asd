def urun_ekle_inek():
    
    var=IntVar()
    
    frame_sag=Frame(master,bg="#add8e6") #SAĞ ALAN
    frame_sag.place(relx=0.37,rely=0.23,relwidth=0.48,relheight=0.6)
    
    eklenecek_urun= Label(frame_sag,bg="#add8e6",text="eklemek istediğiniz ürünü seçiniz")
    eklenecek_urun.pack(pady=2,padx=2)
    
    miktar_yazi= Label(frame_sag,bg="#add8e6",text="miktar giriniz")
    miktar_yazi.pack()
    miktar= Entry(frame_sag)
    miktar.pack(pady=5)
    
    sut_butonu= Button(frame_sag,text="     süt     ")
    sut_butonu.pack(pady=3)
    
    peynir_butonu=Button(frame_sag,text="peynir")
    peynir_butonu.pack(pady=3)
    
    dondurma_butonu=Button(frame_sag,text="dondurma")
    dondurma_butonu.pack(pady=3)
    
    yogurt_butonu= Button(frame_sag,text="yogurt")
    yogurt_butonu.pack(pady=3)    
    
    urun_ekleme_butonu=Button(frame_sag,text="ürünü ekle")
    urun_ekleme_butonu.pack(pady=3)
    
